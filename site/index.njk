---
layout: layouts/base.njk
pagination:
  data: medium.posts
  size: 1
  alias: item
---


<div class="grid">
{% for item in medium.posts %}
  <div class="col box">
  <a class="grid-item" href="/{{ item.path }}">
  {{ item['content:encoded'] | safe }}
    <div class="grid-item-content">
    <div class="date-title"> {{ item.pubDate | date }} вiд {{ item.category }}</div>
    <h1 class="heading">{{ item.title }}</h1>
    </div>
   </a>
  </div>
 {% endfor %}
</div>
