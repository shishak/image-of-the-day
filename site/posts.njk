---
layout: layouts/base.njk
pagination:
  data: post.posts
  size: 1
  alias: item
permalink: /{{ item.path }}/index.html
---
<div class="content"><h1>{{ item.title }}</h1><div class="date-title">{{ item.pubDate | date }} Джерело: {{ item.category }}</div>{{ item['content:encoded'] | safe }}</div>
<div class="sidebar">{% for item in home.posts %}<div class="col box"><a class="grid-item" href="/{{ item.path }}">{{ item['content:encoded'] | safe }}<div class="grid-item-content"><div class="date-title-home"> {{ item.pubDate | date }}</div><h2>{{ item.title }}</h2></div></a></div>{% endfor %}</div>
